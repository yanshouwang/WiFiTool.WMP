/**index.wxss**/
.container0 {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.description {
  margin-top: 25%;
}

.device {
  background: -webkit-linear-gradient(left, #edab00, #fd1b2d);
  height: 200rpx;
  color: white;
  display: flex;
  justify-content: center;
  flex-direction: row;
  align-items: center;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  padding: 20rpx;
}

.device:last-child {
  margin-bottom: 0;
}

.device_hover {
  background: -webkit-linear-gradient(left, #ee9800, #dc0027);
}

.deviceLogo {
  width: 10%;
}

.deviceName {
  width: 50%;
  margin-left: 5%;
  margin-right: 5%;
}

.deviceSignal {
  width: 10%;
}