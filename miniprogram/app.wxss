.container {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: stretch;
  padding: 40rpx;
  box-sizing: border-box;
}

.stack_container {
  position: relative;
}

.stack_item {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}

.invisible {
  opacity: 0;
}